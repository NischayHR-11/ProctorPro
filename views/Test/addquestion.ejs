<% layout("/layouts/boilerplate") %>

<body>

    <div class="row offset-2">

        <h2>Prepare Questions </h2>
        <br>

        <form method="post" class=" mt-3 col-6" action="/<%=id %>/addquestions" novalidate class="needs-validation" style="background-color: #EBEBEB;border-radius: 1rem;padding: 1.5rem;">

            <h5 class="mb-5 ms-3">Question</h5>
        
            <div class="mb-3 col-8">
                <label for="title" class="form-label">Question Title</label>
                <input type="text" placeholder=" Enter The Question ?" name="title" class="form-control" required>
                <div class="valid-feedback"> Question Looks good! </div>
            </div>
        
            <div class="mb-3 col-8">
                <label for="description" class="form-label">Description</label> <!-- Changed name attribute to "description" -->
                <input type="text" placeholder="Type Something.." name="description" class="form-control" required>
                <div class="valid-feedback"> Description Looks good! </div>
            </div>
        
            <h5 class="mb-4 ms-3 mt-5">Answer</h5>
        
            <div class="mb-3 col-6" style="display: flex;align-items: center;justify-content: center;">
                <input type="text" placeholder="choice 1" name="choice1" class="form-control" required> <!-- Changed name attributes -->
                <div class="valid-feedback"> Choice 1 Looks good! </div>
                <i class="fa-solid fa-trash ms-3"></i>
            </div>
            <div class="mb-3 col-6" style="display: flex;align-items: center;justify-content: center;">
                <input type="text" placeholder="choice 2" name="choice2" class="form-control" required> <!-- Changed name attributes -->
                <i class="fa-solid fa-trash ms-3"></i>
                <div class="valid-feedback"> Choice 2 Looks good! </div>
            </div>
        
            <div class="mb-3 col-6" style="display: flex;align-items: center;justify-content: center;">
                <input type="text" placeholder="choice 3" name="choice3" class="form-control" required> <!-- Changed name attributes -->
                <i class="fa-solid fa-trash ms-3"></i>
                <div class="valid-feedback"> Choice 3 Looks good! </div>
            </div>
        
            <div class="mb-3 col-6" style="display: flex;align-items: center;justify-content: center;">
                <input type="text" placeholder="choice 4" name="choice4" class="form-control" required> <!-- Changed name attributes -->
                <i class="fa-solid fa-trash ms-3"></i>
                <div class="valid-feedback"> Choice 4 Looks good! </div>
            </div>
        
            <div class="mb-3 mt-5" style="display: flex;align-items: center;justify-content: center;">
                <p class="me-2">Enter The Correct choice For Question &nbsp;&nbsp;: </p>
                <div class="col-1 mb-3">
                    <input type="text" name="answer" class="form-control" style="height: 1.8rem;" required> <!-- Changed name attributes -->
                </div>
                
            </div>

            <hr>
        
            <!-- Changed Cancel button type to "button" -->
            <a href="/<%=id %>/addquestions">
                <button type="button" class="btn btn-dark">Cancel</button>
            </a>        
        
            <button type="submit" class="btn btn-success ms-5">Save and Submit</button>
        </form>
        

        <div class="col-4 ms-5 " novalidate class="needs-validation" style="background-color: transparent;border-radius: 1rem;padding: 1.5rem;">

            <% questions.forEach((question, index) => { %>  
                <div style="background-color: antiquewhite;height: 6rem;border-radius: 1rem;display: flex;align-items: center;justify-content: center;margin-bottom: 1rem;">
                    <div class="subdiv" style="display: flex;align-items: center;justify-content: center;flex-direction: column;">
                        <h6><%= question.title %></h6> 
                        <p>Multiple choice</p>
                    </div>
                    <form method="POST" action="/<%= id %>/deletequestion/<%= index %>" style="background-color: transparent;border: none;">
                        <button type="submit" class="subdiv1 ms-5" style="display: flex;align-items: center;justify-content: center;flex-direction: column;background-color: transparent;border: none;">
                            <i class="fa-solid fa-trash ms-3"></i>
                        </button>
                    </form>
                </div>
            <% }); %>
            
        <a href="/<%=id %>/addquestions"><button type="button" class="btn btn-outline-primary mt-3" style="width: 100%;"><i class="fa-solid fa-plus me-3"></i> Add  Questions</button></a>
        </div>

    </div>

    <hr>
    <form action="/<%=id %>/description"><button class="btn btn-danger" style="margin-left: 70rem;">Continue</button></form>
   

</body>
